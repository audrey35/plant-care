<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head'); %>
  <body class="d-flex flex-column min-vh-100">
    <% if (private === "private") { %> <%-
    include("./partials/privateNavigation"); %> <% } else { %> <%-
    include("./partials/publicNavigation"); %> <% } %>
    <div class="wrapper flex-grow-1 container my-2 col-md-6">
      <h1><i class="material-icons">local_florist</i> Plant Care Users</h1>
      <% if (users !== null) { %>
      <p>Click on a user to view their public profile.</p>
      <ul class="nav flex-column">
        <% users.forEach( function(user) { %>
        <li class="nav-item">
          <a class="nav-link h4" href="/profile/<%= user.username %>"
            ><%= user.username %></a
          >
        </li>
        <% }); %>
      </ul>
      <% } else { %>
      <p>No users have been created yet.</p>
      <% } %>
    </div>
    <script>
      document.getElementById("users").className += " active";
    </script>
    <%- include("./partials/footer"); %>
  </body>
</html>
